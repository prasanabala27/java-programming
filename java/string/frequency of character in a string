import java.lang.*;

class Main
{
    public static void main (String[] args) {
        char[] str = {'b','a','l','a','j','i','b'};
        int i,j;
        int c=1;
        for (i=0;i<str.length;i++){
            c=1;
            if(str[i]!='0'&&str[i]!=' '){
                for (j=i+1;j<str.length;j++){
                    if(str[i]==str[j]){
                        c++;
                        str[j]='0';
                    }
                }
                System.out.println(str[i]+" "+c);
            }
        } 
    }
}

output
b 2
a 2
l 1
j 1
i 1
